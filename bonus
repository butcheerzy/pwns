CMD: bonus(playerid) {
  f(str_1, 100, "{A939F3}Текущее количество часов: {F3210E}%d", PI[playerid][pPlayedHours]);
  f(str_2, sizeof(str_1), "\n\ {6E64F3}Любой{FFFFFF} скин\t\t\t{F3210E}100{FFFFFF} часов\n\ {6E64F3}Любое{FFFFFF} авто\t\t\t{F3210E}200{FFFFFF} часов\n\ {6E64F3}Случайный{FFFFFF} аксессуар\t\t{F3210E}50{FFFFFF} часов\n\ {6E64F3}100{FFFFFF} AZ Rub\t\t\t{F3210E}100{FFFFFF} часов\n\ {6E64F3}PERFECT{FFFFFF} VIP\t\t\t{F3210E}500{FFFFFF} часов\n\ {6E64F3}Видеокарта{FFFFFF} 10-го уровня\t{F3210E}40{FFFFFF} часов\n\ {6E64F3}Иммунитет{FFFFFF} к английским символам\t{F3210E}30{FFFFFF} часов");
  if (PI[playerid][pAdmin]) {
    strcat(str_2, "\n{6E64F3}[ADM] Снять{FFFFFF} 1 AWARN\t\t{F3210E}50{FFFFFF} часов");
    strcat(str_2, "\n{6E64F3}[ADM] Повысить{FFFFFF} админку (max 4 lvl)\t{F3210E}100{FFFFFF} часов");
  }
