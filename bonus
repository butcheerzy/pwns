  return 1;
} //ко всем кейсам case 16578: { if(!response) return 1; switch(listitem) { case 0: { BuyItemsType[playerid] = 0; ShowBonusSkins(playerid, 0); } case 1: { BuyItemsType[playerid] = 0; ShowBonusCars(playerid, 0); } case 2: { if(PI[playerid][pPlayedHours] < 50) { SCM(playerid, COLOR_LIGHTRED, "У вас недостаточно часов!"); callcmd::bonus(playerid); return 1; } if(!GetInvSlot(playerid, 0)) return SCM(playerid, COLOR_LIGHTRED, !"[Ошибка] {FFFFFF}У вас нет места или ваш инвентарь заблокирован!"); PI[playerid][pPlayedHours] -= 50; UpdatePlayerDataInt(playerid, "PlayedHours", PI[playerid][pPlayedHours]); new item = randomEx(1300, 1322); InvAdd(playerid, item, 1); SCMf(playerid, COLOR_VALIK, "[Информация] {FFFFFF}Вы успешно приобрели '{cccccc}%s{ffffff}'", ItemsInfo[item][ItemName]); callcmd::bonus(playerid); } case 3: { if(PI[playerid][pPlayedHours] < 100) { SCM(playerid, COLOR_LIGHTRED, "У вас недостаточно часов!"); callcmd::bonus(playerid); return 1; } PI[playerid][pPlayedHours] -= 100; UpdatePlayerDataInt(playerid, "PlayedHours", PI[playerid][pPlayedHours]); GiveDonateMoney(playerid, 100); SCM(playerid, COLOR_VALIK, "[Информация] {FFFFFF}Вы успешно приобрели '{cccccc}100 AZ Rub{ffffff}'"); callcmd::bonus(playerid); } case 4: { if(PI[playerid][pPlayedHours] < 500) { SCM(playerid, COLOR_LIGHTRED, "У вас недостаточно часов!"); callcmd::bonus(playerid); return 1; } if(PI[playerid][pVIP] >= 6) { SCM(playerid, COLOR_LIGHTRED, "[Ошибка] {FFFFFF}У вас уже есть этот уровень VIP!"); callcmd::bonus(playerid); return 1; } PI[playerid][pPlayedHours] -= 500; UpdatePlayerDataInt(playerid, "PlayedHours", PI[playerid][pPlayedHours]); J_SetPlayerVIP(playerid, 6); PI[playerid][pVipTime] = gettime()+(1800*24*60*60); SCMAllf(COLOR_LIGHTRED, "[Информация]{FFFFFF} Игрок %s приобрел {9f28fa}PERFECT VIP.", PN(playerid)); SCM(playerid, COLOR_VALIK, "[Информация] {FFFFFF}Вы успешно приобрели '{cccccc}PERFECT VIP{ffffff}'"); callcmd::bonus(playerid); } case 5: { if(PI[playerid][pPlayedHours] < 40) {